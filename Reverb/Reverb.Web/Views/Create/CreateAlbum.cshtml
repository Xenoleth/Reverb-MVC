@using Reverb.Web.Models.Create
@model  CreateAlbumViewModel

@* TODO: Make into navbar *@
@Html.ActionLink("Song", "CreateSong", "Create", null, new { @class = "btn btn-primary" })
<br />
@Html.ActionLink("Album", "CreateAlbum", "Create", null, new { @class = "btn btn-primary" })
<br />
@Html.ActionLink("Artist", "CreateArtist", "Create", null, new { @class = "btn btn-primary" })
<br />
@Html.ActionLink("Genre", "CreateGenre", "Create", null, new { @class = "btn btn-primary" })
<br />

@using (Html.BeginForm("CreateAlbum", "Create", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h4>Create Album</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control", @style = "margin-bottom:15px;" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Artist, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Artist, Model.AllArtists.Select(x => new SelectListItem() { Text = x, Value = x }), new { @class = "form-control", @style = "margin-bottom:15px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CoverUrl, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.CoverUrl, new { htmlAttributes = new { @class = "form-control", @style = "margin-bottom:15px;" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </div>
}