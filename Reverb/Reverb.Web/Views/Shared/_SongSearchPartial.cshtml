@using Reverb.Web.Models.Song
@model SongSearchViewModel

@using (Html.BeginForm("SearchSong", "Song", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h4>Search</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.SearchTerm, "Enter name", new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(x => Model.SearchTerm, new { htmlAttributes = new { @class = "form-control", @style = "margin-bottom:15px;" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SearchBy, "Search by", new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DropDownListFor(x => x.SearchBy, new SelectList(new List<string>()
            {
                "Title",
                "Album",
                "Artist"
            }), new { @class = "form-control", @style = "margin-bottom:15px;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsDescending, "Descending order", new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.CheckBoxFor(x => x.IsDescending, new { @class = "form-control", @style = "margin-bottom:15px;width:20px" })
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.IsDescending, "Only favorites", new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.CheckBoxFor(x => x.OnlyFavorites, new { @class = "form-control", @style = "margin-bottom:15px;width:20px" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" value="Search" class="btn btn-primary"/>
        </div>
    </div>
}